{
  "name": "email-service",
  "version": "0.0.3",
  "description": "NestJs Email Service",
  "author": "DB Team",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/**/*.ts\"",
    "format:build": "npm run format && npm run build",
    "format:build:start": "npm run format && npm run build && npm start",
    "format:build:test": "npm run format && npm run build && npm run test",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:qa": "PORT=3099 ELASTIC_SEARCH_HTTP_HOST='https://216.34.250.41:9200' npm run start:dev",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles",
    "build:test": "npm run build && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e-dev": "jest --config ./test/jest-test.json",
    "test:start": "npm run format:build && pm2 start src/config/environment/pm2/test.config.json",
    "dev:start": "npm run format:build && pm2 start src/config/environment/pm2/dev.config.json",
    "qa:start": "npm run format:build && pm2 start src/config/environment/pm2/qa.config.json",
    "staging:start": "npm run format:build && pm2-runtime src/config/environment/pm2/staging.config.json",
    "production:start": "npm run format:build && pm2-runtime src/config/environment/pm2/production.config.json",
    "clean:build": "rm -rf node_modules/@dnamicro package-lock.json && npm i && npm run build",
    "clean:build:start": "npm run clean:build && npm run dev:start"
  },
  "dependencies": {
    "@dnamicro/service-common": "1.1.23",
    "@nestjs/common": "7.6.15",
    "@nestjs/config": "1.0.0",
    "@nestjs/core": "7.6.15",
    "@nestjs/graphql": "7.10.6",
    "@nestjs/platform-express": "7.6.15",
    "@nestjs/schedule": "^1.0.2",
    "@sendgrid/mail": "^7.6.2",
    "@types/lodash": "4.14.170",
    "apollo-server-express": "2.25.0",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "cli-table3": "^0.6.1",
    "graphql": "^15.5.0",
    "joi": "^17.6.0",
    "object-path": "^0.11.8",
    "prom-client": "13.1.0",
    "reflect-metadata": "0.1.13",
    "request": "2.88.2",
    "request-promise": "4.2.6",
    "rimraf": "3.0.2",
    "rxjs": "6.6.6",
    "sendgrid": "4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "7.6.0",
    "@nestjs/schematics": "7.3.0",
    "@nestjs/testing": "7.6.15",
    "@types/express": "4.17.11",
    "@types/ioredis": "4.26.6",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.36",
    "@types/object-path": "^0.11.1",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "supertest": "6.1.3",
    "ts-jest": "26.5.4",
    "ts-loader": "8.0.18",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
